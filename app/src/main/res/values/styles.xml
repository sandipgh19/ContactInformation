<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AccountChooser">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <!--<item name="android:layout_marginBottom">24dp</item>-->
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AppTheme.AccountChooser.GoogleButton">
        <item name="android:drawableLeft">@drawable/logo_googleg_color_18dp</item>
        <item name="android:background">@drawable/idp_button_background_google</item>
        <item name="android:textColor">@color/background_nav</item>
    </style>

    <style name="AppTheme.AccountChooser.FacebookButton">
        <item name="android:drawableLeft">@drawable/com_facebook_button_icon_white</item>
        <item name="android:background">@drawable/idp_button_background_facebook</item>
        <item name="android:textColor">#3b5998</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:colorActivatedHighlight">#8C8989</item>
        <item name="android:colorFocusedHighlight">#8C8989</item>
    </style>

    <style name="AppTheme.EditText.PasswordField">
        <item name="android:inputType">textPassword</item>
    </style>

</resources>
